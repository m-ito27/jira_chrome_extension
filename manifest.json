{
  "manifest_version": 3,
  "name": "Copy JIRA for Report",
  "version": "0.1",
  "description": "JIRAのIDやタイトルをいい感じにクリップボードにコピーする拡張機能です。",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

